<UserControl x:Class="Blacklight.Showcase.Samples.MediaPlayerSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:controls="clr-namespace:Blacklight.Controls;assembly=Blacklight.Controls">
    <Grid x:Name="LayoutRoot" >
        
        <controls:OuterGlowBorder Background="#FF333333" CornerRadius="5,5,5,5"  OuterGlowOpacity="0.5" OuterGlowSize="15"
                                  Margin="25"
                                  >
            <controls:MediaPlayer Margin="5"
                                  x:Name="MediaPlayer"/>
        </controls:OuterGlowBorder>
       
    </Grid>
</UserControl>
